##### APIMeController
[[controller]]
struct          = "APIMeController"
root_controller = "APIRootController"

[[endpoint.route]]
method      = "GET"
path        = "/v1/me"
controller  = "api.APIMeController.GetMe"
parameter   = "parameters.GetMeRequest"

[[endpoint.route]]
method      = "POST"
path        = "/v1/me"
controller  = "api.APIMeController.LoginMe"
parameter   = "parameters.LoginMeRequest"

[[endpoint.route]]
method      = "PATCH"
path        = "/v1/me"
controller  = "api.APIMeController.UpdateMe"
parameter   = "parameters.UpdateMeRequest"


